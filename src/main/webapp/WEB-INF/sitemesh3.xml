<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- By default, sitemesh only intercepts and decorates the type of Content-Type text/html in the HTTP response header. We can add more mime types -->
    <mime-type>text/html</mime-type>
    <mime-type>application/vnd.wap.xhtml+xml</mime-type>
    <mime-type>application/xhtml+xml</mime-type>

    <!-- Default decorator, when the following paths do not match, enable the decorator to decorate -->
    <mapping path="/*" decorator="/M000000/G000000/F000011.do"/>

    <!--Different matching paths use different decorative pages-->
    <mapping path="/M110000/**.do" decorator="/M000000/G000000/F000012.do"/>
    <mapping path="/M000000/**.do" decorator="/M000000/G000000/F000012.do"/>
    <mapping path="/admin/*" decorator="/another-decorator.html"/>
    <mapping path="/*.special.jsp" decorator="/special-decorator.html"/>

    <!--A matching path uses different decorative pages at the same time-->
    <!--<mapping>
        <path>/articles/*</path>
        <decorator>/decorators/article.html</decorator>
        <decorator>/decorators/two-page-layout.html</decorator>
        <decorator>/decorators/common.html</decorator>
    </mapping>-->

    <!-- Satisfied that the matching path will not be decorated -->
    <mapping path="/login" exclue="true" />
    <mapping path="/M000000/G000000/**.do" exclue="true" />
</sitemesh>
